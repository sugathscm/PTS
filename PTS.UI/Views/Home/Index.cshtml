@{
    ViewBag.Title = "Home Page";
}

<script type="text/javascript">
    $(document).ready(function () {
        $('#List').DataTable({
            "paging": true,

            "ajax": {
                "url": "/PatientMedicalHistory/GetList",
                "type": "POST",
                "datatype": "json"
            },
            "columns": [
                { "data": "PatientName" },
                { "data": "DateCreated" },
                {
                    "data": "Id", "searchable": false, "ordering": false,
                    "render": function (data, type, full, meta) {
                        return '<a class="btn btn-primary btn-xs" href="/PatientMedicalHistory/Details/' + data + '">Edit</a>';
                    }
                },
                {
                    "data": "Id", "searchable": false, "ordering": false,
                    "render": function (data, type, full, meta) {
                        return '<a class="btn btn-warning btn-xs" onclick="Print/Report(' + data + ')">Print</a>';
                    }
                },
            ]
        });
    });
</script>

<div class="dashboard-ecommerce">
    <div class="container-fluid dashboard-content ">
        <div class="row">
            <div class="col-xl-4 col-lg-4 col-md-12 col-sm-12 col-12">
                <div class="page-header">
                    <h2 class="pageheader-title">Dashboard</h2>
                </div>
            </div>
        </div>
        <div class="border border-primary bg-actual-white m-t-20">
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12 m-t-20  m-b-20">
                <div class="table-responsive">
                    <table id="List" class="table table-striped table-bordered first">
                        <thead>
                            <tr>
                                <th width="70%">Patient Name</th>
                                <th width="20%">Date</th>
                                <th></th>
                                <th></th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>

    </div>
</div>
